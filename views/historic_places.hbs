        /* General Body Styling */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 20px;
}

/* Container Styling */
.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Place Card Styling */
.place {
    background-color: white;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 40px;
    padding: 30px;
    transition: transform 0.3s ease;
}

.place:hover {
    transform: scale(1.02);
}

.place img {
    width: 100%;
    max-width: 600px;
    height: auto;
    border-radius: 15px;
}

.place-info {
    margin-top: 20px;
}

.place h2 {
    font-size: 28px;
    color: #333;
    margin-bottom: 15px;
}

.place p {
    font-size: 18px;
    color: #555;
    line-height: 1.8;
}

.tourist-data {
    margin-top: 10px;
    font-weight: bold;
    color: #333;
}

/* Book Button Styling */
.book-btn {
    margin-top: 20px;
    padding: 12px 25px;
    background-color: #28a745;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 30px;
    font-size: 18px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.book-btn:hover {
    background-color: #218838;
    transform: scale(1.05);
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
    background-color: white;
    margin: 10% auto;
    padding: 25px;
    border: 1px solid #888;
    width: 80%;
    max-width: 600px;
    border-radius: 15px;
    text-align: center;
}

.modal-content h3 {
    margin-bottom: 20px;
    font-size: 24px;
}

.modal-content a {
    display: block;
    margin: 12px 0;
    padding: 12px;
    text-decoration: none;
    color: white;
    border-radius: 30px;
    transition: transform 0.2s ease;
}

.modal-content a:hover {
    transform: scale(1.05);
}

.book-flight {
    background-color: #007bff;
}

.book-train {
    background-color: #ff5722;
}

.book-bus {
    background-color: #ffc107;
}

.book-hotel {
    background-color: #17a2b8;
}

.close {
    color: #aaa;
    float: right;
    font-size: 30px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

    </style>
